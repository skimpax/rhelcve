{% extends 'base.html.twig' %}

{% block header_content %}
    {% embed ":default:header.html.twig" %}
    {% endembed %}
{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap-toggle.min.css') }}" />
{% endblock %}


{% block main_content %}
    <div class="row">
        <div class="col-md-10">
            <h3 class="text-primary">Triage of {{ cvrf }}</h3>
        </div>
    </div>

    <rheltriageit></rheltriageit>

    <scrolltotop></scrolltotop>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/js/bootstrap-toggle.min.js') }}"></script>
    <script src="{{ asset('assets/js/rhelsec/rheltriageit.tag') }}" type="riot/tag"></script>
    <script src="{{ asset('assets/js/rhelsec/scrolltotop.tag') }}" type="riot/tag"></script>


    <script type="text/javascript">
        riot.mount('rheltriageit', { cvrf: "{{ cvrf }}", triageitapi: "{{ path('api_rheltriage_one', { 'cvrf': cvrf }) }}", triagepage: "{{ path('gui_triage_list_page') }}" });
        riot.mount('scrolltotop');
    </script>
{% endblock %}
