{% extends 'base.html.twig' %}

{% block header_content %}
    {% embed ":default:header.html.twig" %}
    {% endembed %}
{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/jquery.json-view.min.css') }}" />
{% endblock %}


{% block main_content %}
    <div class="row">
        <div class="col-md-10">
            <h3 class="text-primary">Details of {{ errata }}</h3>
        </div>
    </div>

    <rherratadetails></rherratadetails>

    <scrolltotop></scrolltotop>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/js/jquery.json-view.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/rhelsec/rherratadetails.tag') }}" type="riot/tag"></script>
    <script src="{{ asset('assets/js/rhelsec/scrolltotop.tag') }}" type="riot/tag"></script>

    <script type="text/javascript">
        riot.mount('rherratadetails',  { errata: "{{ errata }}", type: "{{ type }}" });
        riot.mount('scrolltotop');
    </script>
{% endblock %}
